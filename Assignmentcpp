//Question 2
#include <iostream>
using namespace std;

int main()
{
	int a, b, c;
	cout << "Enter two integers: ";
	cin >> a >> b;
	c = a + b;
	cout << "Sum: " << c;
	return 0;
}

//Question 3
#include <iostream>
using namespace std;

int main()
{
int a,b,c,d,e,f,g;
cout << "Enter two integers: ";
cin >> a >> b;
c= a+b;
cout << "Sum: "<< c;
d= a-b;
cout << "Difference: " << d;
e= a*b;
cout << "Product: " << e;
f= a/b;
cout << "Division: " << f;
g= a%b;
cout << "Remainder: "; << g;
return 0;
}
